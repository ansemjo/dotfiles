#!/usr/bin/env bash

# show available 2nd and 3rd level keys
keycaps() {
  case $1 in
    de|german) keycaps_de ;;
    *) echo "unknown keycaps language" ;;
  esac
}

keycaps_de() {
cat <<'EOF'
# 105-key ISO german layout
┏━━━┯━━━━━━━━━━━━━━━━┯━━━━━━━━━━━━━━━━┯━━━━━━━━━━━━━━━━┯━━━━━━━━━━━━━━━━┓
┃   │ 1234 5678 90ß´ │ qwer tzui opü+ │ asdf ghjk löä# │ <yxc vbnm ,.-  ┃
┃🠱  │ !"§$ %&/( )=?` │ QWER TZUI OPÜ* │ ASDF GHJK LÖÄ' │ >YXC VBNM ;:_  ┃
┃  𝝖│ ¹²³¼ ½¬{[ ]}\¸ │ @ł€¶ ŧ←↓→ øþ¨~ │ æſðđ ŋħ ̣ĸ ł˝^’ │ |»«¢ „“”µ ·…–  ┃
┃🠱 𝝖│ ¡⅛£¤ ⅜⅝⅞™ ±°¿˛ │ ΩŁ€® Ŧ¥↑ı ØÞ°¯ │ ÆẞÐª ŊĦ˙& Ł ̣ˇ˘ │  ›‹© ‚‘’º ×÷—  ┃
┗━━━┷━━━━━━━━━━━━━━━━┷━━━━━━━━━━━━━━━━┷━━━━━━━━━━━━━━━━┷━━━━━━━━━━━━━━━━┛
EOF
}

keycaps de
